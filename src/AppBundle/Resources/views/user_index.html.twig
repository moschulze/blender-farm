{% extends 'AppBundle::base.html.twig' %}
{% import "AppBundle::pagination.html.twig" as pagination %}

{% block body %}
    <h1>Projects</h1>
    <p><a href="{{ path('project_add') }}" class="btn btn-primary">Add new</a></p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        &nbsp;
                        <a href="#"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ pagination.render(pages, page, 'user_index', 'page') }}
{% endblock %}